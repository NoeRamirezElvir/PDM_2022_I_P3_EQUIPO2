<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/im_fondo4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/im_carnet" />

        <ImageButton
            android:id="@+id/imvButtonActualizar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="350dp"
            android:backgroundTint="#FFC4883A"
            app:srcCompat="@android:drawable/stat_notify_sync" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txvIdCarnetDetalleD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="@string/id_carnet_detalle_d" />

                <EditText
                    android:id="@+id/txtIdCarnetDetalle"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:background="@drawable/txt_registros"
                    android:textAlignment="center"
                    android:ems="10"
                    android:hint="@null"
                    android:inputType="textPersonName"
                    tools:ignore="SpeakableTextPresentCheck"
                    android:importantForAutofill="no" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/txvIdCarnet"
                    android:layout_marginStart="60dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/id_carnet" />

                <Spinner
                    android:id="@+id/spnIdDetalle"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/txt_registros"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txvIdUnidadVacunacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="@string/id_unidad_de_vacunacion" />

                <Spinner
                    android:id="@+id/spnUnidadDetalle"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:background="@drawable/txt_registros"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txvFechaCarnetD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="@string/fecha_carnet" />

                <EditText
                    android:id="@+id/txtFechaCarnetD"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/txt_registros"
                    android:ems="10"
                    android:hint="@null"
                    android:inputType="textPersonName"
                    android:textAlignment="center"
                    tools:ignore="SpeakableTextPresentCheck"
                    android:importantForAutofill="no" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txvDosisDetalle"
                    android:layout_marginStart="30dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/numero_de_dosis" />

                <Spinner
                    android:id="@+id/spnDosisDetalle"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:background="@drawable/txt_registros"
                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txvIdEmpleadoVacuno"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="@string/id_vacunador" />

                <Spinner
                    android:id="@+id/spnDosisDetalle2"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:background="@drawable/txt_registros"
                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextTextPersonName6"
                android:layout_width="330dp"
                android:layout_height="44dp"
                android:background="@drawable/txt_registros"
                android:ems="10"
                android:hint="@string/observaciones_detalle"
                android:textAlignment="center"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:textColorHint="@color/black"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRegistrarDetalleD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_otro"
                app:backgroundTint="@null"
                android:text="@string/registrar_detalle_btn" />

            <Button
                android:id="@+id/btnVerListaDetalles"
                android:layout_marginStart="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_otro"
                app:backgroundTint="@null"
                android:text="@string/ver_lista_detalle_btn" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>