<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_carnet_detalle"
    android:layout_margin="5dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="#EBEBC289"
    app:cardCornerRadius="7dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayoutDetalle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/imbtBorrarEnfermeroR"
        app:layout_constraintTop_toTopOf="@+id/imbtBorrarEnfermeroR">

        <TextView
            android:id="@+id/itemIdCarnetD"
            android:layout_width="298dp"
            android:layout_height="33dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:background="#EBD9A154"
            android:text="@string/id_carnet_detalle_detalle"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/itemFechaD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="52dp"
            android:layout_marginStart="10dp"
            android:text="@string/fecha_detalle"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/itemIdEmpleadoVacunoD"
            app:layout_constraintEnd_toStartOf="@+id/itemDosisD"
            app:layout_constraintTop_toBottomOf="@+id/itemIdCarnetD"
            app:layout_constraintVertical_bias="0.333" />

        <TextView
            android:id="@+id/itemIdEmpleadoVacunoD"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:text="@string/nombre_empleado_vacunador_detalle"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/itemIdCarnetD"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemDosisD" />

        <TextView
            android:id="@+id/itemDosisD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="140dp"
            android:text="@string/dosis_de_vacuna_detalle"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemIdCarnetD" />

        <TextView
            android:id="@+id/itemObservacionesD"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:text="@string/observacion_detalle"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/itemIdEmpleadoVacunoD"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemIdEmpleadoVacunoD"
            app:layout_constraintVertical_bias="1.0" />

        <ImageButton
            android:id="@+id/itemBorrarDetalleD"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#EBD9A154"
            android:contentDescription="@string/btn_eliminar_efermeror"
            android:scaleType="fitXY"
            android:src="@drawable/ic_borrar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ImageContrastCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>