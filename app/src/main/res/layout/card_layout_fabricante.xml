<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view_Fabricante"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#FF8DDDBB"
    app:cardCornerRadius="7dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayoutFabricante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/itemImagenFabric"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/img_cd_fabricante"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/itemIdLab"
            android:layout_width="234dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:text="ID Fabricante"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/itemImagenFabric"
            app:layout_constraintStart_toEndOf="@id/itemImagenFabric"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/itemNombreLab"
            android:layout_width="234dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:text="Nombre Laboratorio "
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/itemImagenFabric"
            app:layout_constraintTop_toBottomOf="@+id/itemIdLab"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/itemPaisLab"
            android:layout_width="234dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="68dp"
            android:text="Pais de Origen:"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/itemImagenFabric"
            app:layout_constraintTop_toBottomOf="@+id/itemNombreLab"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/itemNombreContacto"
            android:layout_width="234dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="95dp"
            android:text="Nombre Contacto"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/itemImagenFabric"
            app:layout_constraintTop_toBottomOf="@+id/itemNombreLab"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/itemTelefonoContac"
            android:layout_width="234dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="122dp"
            android:text="Telefono Contacto"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/itemImagenFabric"
            app:layout_constraintTop_toBottomOf="@+id/itemNombreLab"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageButton
            android:id="@+id/itemBtnEditarLab"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:backgroundTint="#FF22A36C"
            android:contentDescription="@string/btn_editar_enfermeror"
            android:scaleType="fitXY"
            android:src="@drawable/ic_actualizar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/itemBtnBorrarLab"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="#FF22A36C"
            android:scaleType="fitXY"
            android:src="@drawable/ic_borrar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>