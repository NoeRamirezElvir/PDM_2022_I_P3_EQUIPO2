<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view_vacunacion"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#FF8DDDBB"
    app:cardCornerRadius="7dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/itemImagenCentro"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_vacunacion"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/itemIdCentro"
            android:layout_width="236dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:text="ID Centro de Vacunación"
            android:textSize="17sp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/itemImagenCentro"
            app:layout_constraintStart_toEndOf="@id/itemImagenCentro"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/itemNombreCentro"
            android:layout_width="236dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="35dp"
            android:text="Centro de .. "
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/itemImagenCentro"
            app:layout_constraintTop_toBottomOf="@+id/itemIdCentro"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/itemDireccionCentro"
            android:layout_width="236dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="63dp"
            android:text="Dirección"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/itemImagenCentro"
            app:layout_constraintTop_toBottomOf="@+id/itemNombreCentro"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/itemHorario"
            android:layout_width="236dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="90dp"
            android:text="Horas: .."
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/itemImagenCentro"
            app:layout_constraintTop_toBottomOf="@+id/itemDireccionCentro"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/itemTipo"
            android:layout_width="236dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="117dp"
            android:text="Centro de Vacunación .."
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/itemImagenCentro"
            app:layout_constraintTop_toBottomOf="@+id/itemDireccionCentro"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageButton
            android:id="@+id/itemBtnEditarCentro"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:backgroundTint="#FF22A36C"
            android:contentDescription="@string/btn_editar_enfermeror"
            android:scaleType="fitXY"
            android:src="@drawable/ic_actualizar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/itemBtnBorrarCentro"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="0dp"
            android:backgroundTint="#FF22A36C"
            android:scaleType="fitXY"
            android:src="@drawable/ic_borrar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>