<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view_region"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#FF8DDDBB"
    app:cardCornerRadius="7dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayoutRegion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/itemImagenMunicipio"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icono_municipio"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/itemIdMunicipio"
            android:layout_width="228dp"
            android:layout_height="32dp"
            android:layout_marginStart="14dp"
            android:text="ID Municipio"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/itemImagenMunicipio"
            app:layout_constraintStart_toEndOf="@id/itemImagenMunicipio"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/itemNombreMunicipio"
            android:layout_width="228dp"
            android:layout_height="18dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="40dp"
            android:text="Municipio "
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/itemImagenMunicipio"
            app:layout_constraintTop_toBottomOf="@+id/itemIdMunicipio"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/itemRegionS"
            android:layout_width="228dp"
            android:layout_height="18dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="68dp"
            android:text="Region Sanitaria de "
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/itemImagenMunicipio"
            app:layout_constraintTop_toBottomOf="@+id/itemNombreMunicipio"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageButton
            android:id="@+id/itemBtnEditarMunicipio"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:backgroundTint="#FF22A36C"
            android:contentDescription="@string/btn_editar_enfermeror"
            android:scaleType="fitXY"
            android:src="@drawable/ic_actualizar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/itemBtnBorrarMunicipio"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="45dp"
            android:backgroundTint="#FF22A36C"
            android:scaleType="fitXY"
            android:src="@drawable/ic_borrar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>