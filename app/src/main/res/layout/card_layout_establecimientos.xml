<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view_region"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#FF8DDDBB"
    app:cardCornerRadius="7dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayoutRegion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/itemImagenEstablecimientos"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_salud_establecimiento"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/itemIdEstablecimiento"
            android:layout_width="236dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:text="ID Establecimiento de Salud"
            android:textSize="15sp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/itemImagenEstablecimientos"
            app:layout_constraintStart_toEndOf="@id/itemImagenEstablecimientos"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/itemNombreEstablecimiento"
            android:layout_width="236dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="35dp"
            android:text="Establecimiento: "
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/itemImagenEstablecimientos"
            app:layout_constraintTop_toBottomOf="@+id/itemIdEstablecimiento"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/itemDireccionEstablecimiento"
            android:layout_width="236dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="63dp"
            android:text="Direccion: "
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/itemImagenEstablecimientos"
            app:layout_constraintTop_toBottomOf="@+id/itemNombreEstablecimiento"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/itemTelefonoEstablecimiento"
            android:layout_width="236dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="90dp"
            android:text="TelÃ©fono: 2440-1330"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/itemImagenEstablecimientos"
            app:layout_constraintTop_toBottomOf="@+id/itemDireccionEstablecimiento"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/itemMunicipioEstablecimiento"
            android:layout_width="236dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="115dp"
            android:text="Ubicado en Municipio: "
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/itemImagenEstablecimientos"
            app:layout_constraintTop_toBottomOf="@+id/itemDireccionEstablecimiento"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageButton
            android:id="@+id/itemBtnEditarEstablecimiento"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:backgroundTint="#FF22A36C"
            android:contentDescription="@string/btn_editar_enfermeror"
            android:scaleType="fitXY"
            android:src="@drawable/ic_actualizar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/itemBtnBorrarEstablecimiento"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#FF22A36C"
            android:scaleType="fitXY"
            android:src="@drawable/ic_borrar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>